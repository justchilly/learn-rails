<% content_for :title do %>Sign Up<% end %>
<h3>Sign Up</h3>

<section>
	<div class="form">
	<%= simple_form_for @user do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Create my account", class: "submit" %>
	<% end  %>
	</div>
</section>

<p>You won't regret this one, hoss.</p>
